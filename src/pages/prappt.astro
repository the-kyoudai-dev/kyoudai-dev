---
import Layout from '../layouts/Layout.astro';
import { marked } from 'https://cdn.jsdelivr.net/npm/marked/+esm';

// Get lesson ID from URL or default to first lesson
const urlParams = new URL(Astro.request.url).searchParams;
const lessonId = urlParams.get('lesson') || 'm1-aibou-mindset';

// Fetch curriculum and registry
const curriculumRes = await fetch('http://localhost:4321/gateways/prappt/curriculum.json');
const curriculum = await curriculumRes.json();

const registryRes = await fetch('http://localhost:4321/gateways/prappt/registry.json');
const registry = await registryRes.json();

// Find current lesson
const currentLesson = curriculum.lessons.find((l: any) => l.id === lessonId) || curriculum.lessons[0];

// Fetch lesson content
let lessonContent = '';
try {
  const lessonRes = await fetch(`http://localhost:4321/gateways/prappt/lessons/${currentLesson.id}.md`);
  lessonContent = await lessonRes.text();
} catch (e) {
  lessonContent = '# Lesson not found';
}

// Parse wikilinks and convert to HTML
function resolveWikilinks(markdown: string): string {
  return markdown.replace(
    /\[\[([-\w]+)(?:\|([^\]]+))?\]\]/g,
    (match, id, displayText) => {
      const display = displayText || id.replace(/-/g, ' ');
      return `<a href="/prappt?lesson=${id}" class="wikilink">${display}</a>`;
    }
  );
}

const htmlContent = marked(resolveWikilinks(lessonContent));

// Find next and previous lessons for spine navigation
const currentIndex = curriculum.lessons.findIndex((l: any) => l.id === currentLesson.id);
const nextLesson = currentIndex < curriculum.lessons.length - 1 ? curriculum.lessons[currentIndex + 1] : null;
const prevLesson = currentIndex > 0 ? curriculum.lessons[currentIndex - 1] : null;
---

<Layout title={`PrAPPt - ${currentLesson.title}`}>
  <div class="prappt-portal" style="--color-prappt: #00FFFF;">
    {/* Header */}
    <header class="prappt-header">
      <h1>PrAPPt</h1>
      <p class="tagline">Success is a response.</p>
    </header>

    <div class="prappt-container">
      {/* Sidebar Navigation */}
      <aside class="prappt-sidebar">
        <nav class="lesson-nav">
          <div class="nav-section">
            <h3>Lessons</h3>
            <ul>
              {curriculum.lessons.map((lesson: any) => (
                <li key={lesson.id}>
                  <a 
                    href={`/prappt?lesson=${lesson.id}`}
                    class={`nav-link ${lesson.id === currentLesson.id ? 'active' : ''}`}
                  >
                    {lesson.title}
                  </a>
                  {lesson.estimated_time && (
                    <span class="time">{lesson.estimated_time} min</span>
                  )}
                </li>
              ))}
            </ul>
          </div>
        </nav>
      </aside>

      {/* Main Content */}
      <main class="prappt-main">
        <div class="lesson-viewer">
          <div class="lesson-content">
            <Fragment set:html={htmlContent} />
          </div>

          {/* Navigation Controls */}
          <div class="lesson-nav-controls">
            {prevLesson ? (
              <a href={`/prappt?lesson=${prevLesson.id}`} class="nav-btn btn-back">
                ← Back to {prevLesson.title}
              </a>
            ) : (
              <div></div>
            )}
            {nextLesson ? (
              <a href={`/prappt?lesson=${nextLesson.id}`} class="nav-btn btn-next">
                Next → {nextLesson.title}
              </a>
            ) : null}
          </div>

          {/* "Along the Lines" - Related Lessons */}
          {currentLesson.edges?.peer && currentLesson.edges.peer.length > 0 && (
            <div class="along-the-lines">
              <h4>Along the Lines</h4>
              <div class="peer-links">
                {currentLesson.edges.peer.map((peerId: string) => {
                  const peerLesson = curriculum.lessons.find((l: any) => l.id === peerId);
                  return peerLesson ? (
                    <a key={peerId} href={`/prappt?lesson=${peerId}`} class="peer-link">
                      {peerLesson.title}
                    </a>
                  ) : null;
                })}
              </div>
            </div>
          )}
        </div>
      </main>
    </div>
  </div>

  <style define:vars={{colorPrappt: 'var(--color-prappt)'}}>
    .prappt-portal {
      --color-primary: var(--color-prappt, #00FFFF);
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      background: #000000;
      color: #FFFFFF;
    }

    .prappt-header {
      background: linear-gradient(90deg, rgba(0, 255, 255, 0.1) 0%, rgba(0, 0, 0, 1) 100%);
      padding: 2rem;
      border-bottom: 2px solid var(--color-primary);
      text-align: center;
    }

    .prappt-header h1 {
      font-size: 3rem;
      font-family: 'Noto Mono', monospace;
      font-weight: bold;
      margin: 0;
      color: #FFFFFF;
    }

    .tagline {
      font-size: 1.25rem;
      font-style: italic;
      margin: 0.5rem 0 0 0;
      color: var(--color-primary);
    }

    .prappt-container {
      display: flex;
      flex: 1;
      max-width: 1440px;
      margin: 0 auto;
      width: 100%;
      gap: 2rem;
      padding: 2rem;
    }

    .prappt-sidebar {
      width: 20%;
      min-width: 240px;
      border-right: 1px solid rgba(255, 255, 255, 0.1);
      padding-right: 2rem;
      max-height: 80vh;
      overflow-y: auto;
    }

    .lesson-nav h3 {
      font-size: 1.25rem;
      font-family: 'Noto Mono', monospace;
      margin-bottom: 1rem;
      color: var(--color-primary);
    }

    .lesson-nav ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .lesson-nav li {
      margin-bottom: 1rem;
    }

    .nav-link {
      display: block;
      color: #FFFFFF;
      text-decoration: none;
      padding: 0.5rem;
      border-left: 2px solid transparent;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      border-left-color: var(--color-primary);
      color: var(--color-primary);
    }

    .nav-link.active {
      border-left-color: var(--color-primary);
      color: var(--color-primary);
      font-weight: bold;
      background: rgba(0, 255, 255, 0.1);
    }

    .time {
      font-size: 0.875rem;
      color: rgba(255, 255, 255, 0.5);
      margin-left: 0.5rem;
    }

    .prappt-main {
      flex: 1;
      max-height: 90vh;
      overflow-y: auto;
    }

    .lesson-viewer {
      display: flex;
      flex-direction: column;
    }

    .lesson-content {
      font-size: 1.125rem;
      line-height: 1.8;
      margin-bottom: 3rem;
      flex: 1;
    }

    .lesson-content :global(h1),
    .lesson-content :global(h2),
    .lesson-content :global(h3) {
      font-family: 'Noto Mono', monospace;
      color: var(--color-primary);
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .lesson-content :global(h1) {
      font-size: 2rem;
    }

    .lesson-content :global(h2) {
      font-size: 1.5rem;
    }

    .lesson-content :global(h3) {
      font-size: 1.25rem;
    }

    .lesson-content :global(p) {
      margin-bottom: 1rem;
    }

    .lesson-content :global(code) {
      background: rgba(0, 255, 255, 0.1);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-family: 'Noto Mono', monospace;
      color: var(--color-primary);
    }

    .lesson-content :global(pre) {
      background: rgba(0, 0, 0, 0.8);
      border: 1px solid var(--color-primary);
      padding: 1rem;
      border-radius: 8px;
      overflow-x: auto;
      margin-bottom: 1rem;
    }

    .lesson-content :global(blockquote) {
      border-left: 4px solid var(--color-primary);
      padding-left: 1rem;
      margin-left: 0;
      color: rgba(255, 255, 255, 0.8);
    }

    .lesson-content :global(table) {
      border-collapse: collapse;
      width: 100%;
      margin: 1rem 0;
    }

    .lesson-content :global(th),
    .lesson-content :global(td) {
      border: 1px solid var(--color-primary);
      padding: 0.5rem;
      text-align: left;
    }

    .lesson-content :global(th) {
      background: rgba(0, 255, 255, 0.1);
      color: var(--color-primary);
    }

    .wikilink {
      color: var(--color-primary);
      text-decoration: underline;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .wikilink:hover {
      opacity: 0.8;
      text-decoration-thickness: 2px;
    }

    .lesson-nav-controls {
      display: flex;
      gap: 1rem;
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      justify-content: space-between;
    }

    .nav-btn {
      padding: 0.75rem 1.5rem;
      background: transparent;
      border: 2px solid var(--color-primary);
      color: var(--color-primary);
      text-decoration: none;
      font-family: 'Noto Mono', monospace;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .nav-btn:hover {
      background: rgba(0, 255, 255, 0.1);
      transform: translateY(-2px);
    }

    .btn-back {
      order: 1;
    }

    .btn-next {
      order: 2;
      margin-left: auto;
    }

    .along-the-lines {
      margin-top: 3rem;
      padding: 1.5rem;
      background: rgba(0, 255, 255, 0.05);
      border-left: 4px solid var(--color-primary);
      border-radius: 8px;
    }

    .along-the-lines h4 {
      color: var(--color-primary);
      margin: 0 0 1rem 0;
      font-family: 'Noto Mono', monospace;
    }

    .peer-links {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .peer-link {
      color: var(--color-primary);
      text-decoration: none;
      transition: all 0.3s ease;
      padding: 0.5rem;
    }

    .peer-link:hover {
      text-decoration: underline;
      padding-left: 1rem;
    }

    @media (max-width: 768px) {
      .prappt-container {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
      }

      .prappt-sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0 0 1rem 0;
        max-height: none;
      }

      .prappt-main {
        max-height: none;
      }

      .prappt-header h1 {
        font-size: 2rem;
      }
    }
  </style>
</Layout>